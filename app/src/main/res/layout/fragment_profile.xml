<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ProfileFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#CC689F38"
        android:gravity="center"
        android:minHeight="100dp"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="136dp"
        android:fontFamily="@font/almendra"
        android:text="Profile"
        android:textColor="#070707"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/materialToolbar2"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar2" />

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="649dp"
        android:layout_marginTop="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar2">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-70dp"
            android:layout_marginBottom="254dp"
            android:width="380dp"
            android:background="#99AAAAAA"
            android:fontFamily="@font/news_cycle"
            android:text="Username"
            android:textAlignment="center"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="125dp"
            android:width="380dp"
            android:background="#99AAAAAA"
            android:fontFamily="@font/news_cycle"
            android:text="Searches"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-70dp"
            android:layout_marginBottom="192dp"
            android:width="380dp"
            android:background="#99AAAAAA"
            android:fontFamily="@font/news_cycle"
            android:text="Password"
            android:textAlignment="center"
            android:textSize="44sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="308dp"
            android:layout_marginBottom="4dp"
            android:background="#FFFFFF"
            android:foregroundTint="#CC689F38"
            android:src="@drawable/user" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="92dp"
            android:layout_height="99dp"
            android:layout_above="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="314dp"
            android:layout_marginBottom="-28dp"
            android:src="@drawable/key" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="228dp"
            android:layout_height="249dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="357dp"
            android:src="@drawable/avatar" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>